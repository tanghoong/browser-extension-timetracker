{
  "manifest_version": 3,
  "name": "Time Tracker - Website Usage Monitor",
  "version": "1.0.0",
  "description": "Track time spent and visits on websites. Privacy-first, local-only storage, no external servers.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "idle",
    "alarms",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background/tracker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Time Tracker"
  },
  "side_panel": {
    "default_path": "ui/dashboard.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}